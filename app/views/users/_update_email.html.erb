<h1>Update Email</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :current_user, :url => :update_email_user do |f| %>

      <%= f.label 'new email' %>
      <%= f.email_field :email, id:"email",:value => '',class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit "Update Email", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>

<span class="error-message">
<% if flash[:error] -%>
  <p class='error' style="color:red;"><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
  <p class='notice' style="color:green;"><%=h flash[:notice] %></p>
<% end -%>
</span>
