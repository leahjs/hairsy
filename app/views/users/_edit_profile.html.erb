<div class="row">
    <%= form_for(current_user) do |f| %>

      Username: <%= current_user.username %><br>
      Email: <%= current_user.email %><br>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, :value => current_user.first_name, class: 'form-control' %><br>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, :value => current_user.last_name, class: 'form-control' %><br>

      <%= f.label :gender %>
      <%= f.text_field :gender, :value => current_user.gender, class: 'form-control' %><br>

      <%= f.label :birth_year %>
      <%= f.text_field :birth_year, :value => current_user.birth_year, class: 'form-control' %><br>

      <%= f.label :size %>
      <%= f.text_field :size, :value => current_user.size, class: 'form-control' %><br>

      <%= f.label :country %>
      <%= f.text_field :country, :value => current_user.country, class: 'form-control' %><br>

      <%= f.submit "Update Profile", class: "btn btn-primary" %>
    <% end %>

</div>
<span class="error-message">
<% if flash[:error] -%>
  <p class='error' style="color:red;"><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
  <p class='notice' style="color:green;"><%=h flash[:notice] %></p>
<% end -%>
</span>
