<h1>Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :email_confirmation %>
      <%= f.email_field :email_confirmation %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>

    <p>Returning user? <%= link_to "Sign In now!", signin_path %></p>
  </div>
</div>

<span class="error-message">
<% if flash[:error] -%>
  <p class='error' style="color:red;"><%=h flash[:error] %></p>
<% end -%>
<% if flash[:notice] -%>
  <p class='notice' style="color:green;"><%=h flash[:notice] %></p>
<% end -%>
</span>
